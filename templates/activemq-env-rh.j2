export ACTIVEMQ_USER ACTIVEMQ_BASE ACTIVEMQ_START ACTIVEMQ_STOP ACTIVEMQ_LOG \
        ACTIVEMQ_OPTS JAVA_HOME ACTIVEMQ_CLASSPATH

